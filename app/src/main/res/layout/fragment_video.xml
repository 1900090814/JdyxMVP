<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="text.jdyx.com.jdyx.fragment.VideoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_Fr_Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="北京"
                android:textColor="#fee4d2"
                android:textSize="16sp"
                android:paddingLeft="16dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/iv_Fr_LocationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_button_dropdown"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                />
            <android.support.design.widget.TabLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tb_Fr_Video"
                />
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vp_Fr_Video"
            />
    </LinearLayout>

</FrameLayout>
