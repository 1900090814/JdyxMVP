<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="text.jdyx.com.jdyx.activity.LoginActivity">
    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_marginTop="46dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_Login_Phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="28dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColorHint="@color/colorHint"
            android:textSize="15sp"
            android:drawableLeft="@drawable/login_icon_phone"
            android:drawablePadding="9dp"
            android:paddingLeft="26dp"
            />
        <CheckBox
            android:button="@null"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginRight="31dp"
            android:text="获取验证码"
            android:textSize="13sp"
            android:textColor="#fff"
            android:background="@drawable/cb_login_vercode"
            android:gravity="center"
            android:id="@+id/cb_Login_VerCode"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        />
    <EditText
        android:layout_marginTop="36dp"
        android:id="@+id/et_Login_VerCode"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@null"
        android:hint="请输入验证码"
        android:textColorHint="@color/colorHint"
        android:textSize="15sp"
        android:drawableLeft="@drawable/login_icon_verification"
        android:drawablePadding="9dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        />
    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        />
    <CheckBox
        android:id="@+id/cb_Login"
        android:layout_width="310dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginTop="35dp"
        android:background="@drawable/cb_login"
        android:button="@null"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/ll_Login_Agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示：未注册京典一线账号的手机号，登录时将自动"
            android:textSize="11sp"
            android:textColor="#686868"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_Login_Agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#686868"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
</LinearLayout>
